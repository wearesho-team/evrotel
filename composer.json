{
  "name": "wearesho-team/evrotel",
  "description": "Evrotel API Integration",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "horat1us/environment-config": "^1.2",
    "guzzlehttp/guzzle": "^6.3",
    "nesbot/carbon": "^1.30",
    "wearesho-team/base-collection": "^1.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3",
    "brainmaestro/composer-git-hooks": "^2.6"
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Evrotel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Evrotel\\Tests\\": "tests/"
    }
  }
}
